.projects-list-item {
  & {
    border-bottom $colored-border
    padding unit(2 * $lambda, em) 0

    &:first-child {
      padding-top unit($lambda, em)
    }

    &:last-child {
      border-width 0
    }
  }

  +e(description) {
    margin-bottom 1em
  }

  +e(visual-container) {
    col(1/2)

    +below('m') {
      stack()
    }
  }

  +e(content) {
    col(1/2)

    +below('m') {
      stack()
      margin-top 1em
    }
  }
}
