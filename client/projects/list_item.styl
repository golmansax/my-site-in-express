.projects-list-item {
  & {
    border-bottom em(1px) $my-green solid;
    padding 1em 0

    &:last-child {
      border-width 0
    }
  }

  +e(description) {
    margin-bottom 1em
  }

  +e(image-container) {
    col(1/2)

    img {
      width 100%
    }

    +m(small) {
      col(1/4)

      img {
        width 100%
      }
    }
  }

  +e(content) {
    col(1/2)

    line-height 1.4

    dt {
      font-weight bold
    }

    dd {
      margin-bottom 1em
    }

    ul {
      list-style disc
      padding-left 1.25em
    }
  }
}
