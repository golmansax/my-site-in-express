.projects-list {
}

.projects-list-item {
  border-bottom em(1px) $my-green solid;
  padding 1em 0

  &:last-child {
    border-width 0
  }
}

.projects-list-item-left {
  col(1/2)

  img {
    width 100%
  }
}

.projects-list-item-right {
  col(1/2)

  line-height 1.4

  dt {
    font-weight bold
  }

  dd {
    margin-bottom 1em
  }

  ul {
    list-style disc
    padding-left 1.25em
  }
}
