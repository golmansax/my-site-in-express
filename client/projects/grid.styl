.projects-grid {
  +e(item) {
    col(1/3)

    h2 {
      text-align: center;
      margin-bottom: .25em;
    }

    +below('m') {
      stack()
      padding: 1em 0;

      &:first-child {
        padding-top: 2em;
      }
    }
  }

  +e(chunk) {
    clearfix()

    +above('m') {
      padding: 1em 0;

      &:first-child {
        padding-top: 2em;
      }
    }
  }
}
