.projects-grid {
  +e(item) {
    col(1/3)

    h2 {
      text-align center
    }

    +below('m') {
      stack()
      padding 1em 0

      &:first-child {
        padding-top 2em
      }
    }
  }

  +e(chunk) {
    clearfix()

    +above('m') {
      padding unit($lambda, em) 0

      &:first-child {
        padding-top unit(2 * $lambda, em)
      }
    }
  }
}
