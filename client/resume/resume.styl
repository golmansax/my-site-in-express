.resume-category {
  margin-top 1em

  .resume-entry:first-of-type {
    margin-top auto
  }

  h2,
  h3 {
    margin-bottom .5em
  }
}

.resume-entry {
  margin 2em 0 0
}

.resume-entry-image-container {
  padding-top .5em
}

.resume-entry-image {
  col(1/3)

  img {
    width 100%
  }
}

.resume-entry-other {
  col(2/3)
}

.resume-entry-image,
.resume-entry-other {
  +below('m') {
    stack()
  }
}
