.footer {
  margin-top 2em
  border-top $colored-border
  padding .5em 0 1em

  .fa-stack {
    margin-right .2em
  }

  +e(section) {
    margin-bottom .25em

    +desktop() {
      display inline-block
      margin-right 2em
    }

    +between('m', 'l') {
      col(1/2)
      margin-right 0
    }
  }

  +e(resume-icon) {
    .fa-file-text {
      margin: em(-1px) 0 0 em(.5px)
    }
  }

  +e(email-icon) {
    .fa-envelope {
      margin-top: em(-1px)
    }
  }
}
