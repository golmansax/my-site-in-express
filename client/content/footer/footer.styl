@require 'font-awesome-stylus/stylus/mixins'
@require 'font-awesome-stylus/stylus/variables'

.content-footer {
  margin-top unit($lambda, em)
  border-top $colored-border
  padding 1em 0

  +e(section) {
    margin-bottom 2em

    &:last-child {
      margin-bottom 0
    }

    +above('l') {
      col(1/2)
      margin-bottom 0
    }
  }

  +e(main-links) {
    a {
      position relative

      &:after {
        fa-icon()

        color $dark-gray
        content: $fa-var-circle
        font-size 5px
        padding 0 1em
        vertical-align middle
      }

      &:last-child:after {
        content: ''
      }
    }
  }
}
