.content-handler {
  +e(top) {
    &,
    & > div {
      z-index 10
    }
  }

  +e(body) {
    overflow hidden
    position relative
    z-index 0
  }

  +e(backdrop) {
    $infinity = unit(1000 * $lambda, em)

    background rgba($dark-gray, .5)
    height $infinity
    left 0
    position absolute
    top 0
    width $infinity
  }
}
