.work-together-handler {
  +e(secondary-heading) {
    text-align center
    margin 0 0 unit($lambda, em)
  }

  +e(section) {
    margin-bottom unit($lambda * 3, em)

    &:last-child {
      margin-bottom 0
    }
  }

  +e(client) {
    margin-bottom unit($lambda * 2, em)

    +above('xl') {
      col(1/4, cycle: 4)
    }

    +at('l') {
      col(1/3, cycle: 3)

      &:last-child {
        display none
      }
    }

    +at('m') {
      col(1/2, cycle: 2)
    }
  }
}
