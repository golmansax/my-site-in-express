@import 'nib'

global-reset()

$container-width = 900px

body {
  font-family 'PT Sans', sans-serif
  font-size 16px
  line-height 1.5
}

h1,
h2 {
  margin-bottom: .5em
}

h1 {
  font-size 24px
}

h2 {
  font-size 20px
  font-weight bold
}

h3 {
  font-size 18px
}

a i {
  text-decoration: underline;
}

p {
  margin-bottom .5em
}

.resume-category {
  margin-top 1em

  .resume-entry:first-of-type {
    margin-top auto
  }
}

.resume-entry {
  margin 1em 1em 0
}

$resume-entry-child {
  margin-left 2em
}

.resume-entry-show-more {
  @extends $resume-entry-child
}

.resume-entry-note {
  @extends $resume-entry-child
}

.hide {
  display none
}

$pdf-landscape-width = 960px
$pdf-landscape-height = 720px
$pdf-viewer-width = 720px

.pdf-viewer-landscape {
  width $pdf-viewer-width
  height ($pdf-viewer-width * $pdf-landscape-height / $pdf-landscape-width)
  border 1px #aaa solid
  margin-left auto
  margin-right auto
  display block
}

.container {
  max-width $container-width
  width 100%
  margin-left auto
  margin-right auto
  padding 0 1em
}

.clearfix {
  clearfix();
}
